@model cv8_mvc.Models.StudentCourse

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Course Enrollment</h1>
<h3>Are you sure you want to leave this course?</h3>
<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.CourseName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.CourseName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.CourseNameAbbreviation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.CourseNameAbbreviation)
        </dd>
    </dl>
    <a class="btn btn-danger" asp-controller="StudentCourse" asp-action="RemoveEnrollmentConfirmed"
        asp-route-sid="@Model.StudentId" asp-route-cid="@Model.CourseId">Leave Course</a> |
    <a asp-controller="Student" asp-action="Details" asp-route-id="@Model.StudentId">Back to Student Details</a>
</div>
